{
  "name": "weather-forecast",
  "version": "0.0.0",
  "description": "saaennuste.fi",
  "author": "weather-forecast",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "npm run build && vite preview",
    "prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "prettier:format": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "generate-logos": "pwa-assets-generator --preset minimal public/original-logo.svg",
    "deploy-test": "npm run build && firebase serve",
    "deploy-prod": "npm run build && firebase deploy"
  },
  "devDependencies": {
    "@vite-pwa/assets-generator": "^0.2.6",
    "husky": "^1.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "~5.6.2",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^0.21.0"
  },
  "dependencies": {
    "lit": "^3.2.1",
    "suncalc": "^1.9.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
